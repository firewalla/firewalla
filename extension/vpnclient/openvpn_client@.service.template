[Unit]
Description=Firewalla OpenVPN Client Service using profile %i
After=network.target

[Service]
Restart=always
ExecStart=/usr/sbin/openvpn --config "/home/pi/.firewalla/run/ovpn_profile/%i.ovpn" --script-security 2 --up "/home/pi/firewalla/extension/vpnclient/ovpn_up.sh %i" --log "/var/log/openvpn_client-%i.log" --status "/var/log/openvpn_client-status-%i.log"

[Install]
WantedBy=multi-user.target

