#!/bin/bash
#
# -t 'debug' or 'cloud'
# -m message
#

while getopts t:m: option
do
 case "${option}"
 in
 t) DEBUG=${OPTARG};;
 m) MESSAGE=$OPTARG;;
 esac
done
tracelog(){
    if [[ $(whoami) == "pi" ]]; 
    then
        echo "FIREWALLA:("$DEBUG"): "$MESSAGE >> /home/pi/logs/Trace.log
    fi
}

if [[ -e /tmp/FWPRODUCTION ]] 
then  
    if [[ "$DEBUG" != "debug" ]]
    then 
        /usr/bin/logger "FIREWALLA:("$DEBUG"): "$MESSAGE
        tracelog
    fi
else 
    /usr/bin/logger "FIREWALLA:("$DEBUG"): "$MESSAGE
    tracelog
fi
sudo chmod 777 /home/pi/logs/Trace.log
